{
    "math_library": "PETsc",
    "propagator": {
        "type" : "crank_nicolson",
        "time_step" : 0.0001,
        "checkpoint" : 5000,
        "restart" : false,
        "do_propagate" : true
    },
    "basis": {
        "order": 8,
        "node_sequence": "linear",
        "parameter": 30,
        "num_nodes": 500,
        "x_min": 0.0,
        "x_max": 300.0,
        "lmax": 30,
        "mmax": 30,
        "ecs_r0": 1.0
    },
    "lasers": [
        {
            "num_cycles": 5.0,
            "cycles_delay": 0.0,
            "envelope": "sin2",
            "intensity": 1e14,
            "wavelength": 200,
            "cep": 0,
            "polarization_vector": [
               	1.0,
                1.0,
                1.0
            ],
            "poynting_vector": [
                1.0,
                1.0,
                -2.0
            ]
        }
    ],
    "initial_state": [
        {
            "n": 1,
            "l": 0,
            "m": 0,
            "phase": 0
        }
    ],
    "potentials": [
        {
            "type": "coulomb",
            "Z": 1
        },
        {
            "type": "yukawa",
            "Z": 1,
            "decay": 2.0329
        },
        {
            "type": "exponential",
            "amplitude": 0.3953,
            "decay": 6.1805
        }
    ],
    "observables": {
        "norm": {
            "compute_period": 1,
            "filename" : "norm.txt"
        },
        "dipole_acc": {
            "filename" : "dip_acc.txt"
        },
        "populations": {
            "filename" : "populations.txt"
        },
        "pulse": {
            "filename" : "pulse.txt"
        },
        "potential": {
            "grid_points" : 500,
            "filename" : "potential.txt"
        }
    },
    "eigen_state": {
        "solver": "SLEPC",
        "tol": 1e-10,
        "problem_type": "GHEP",
        "filename": "He.h5",
        "bound": {
            "nmax": 4
        },
        "continuum": {
            "nmax": 1,
            "lmax": 0
        }
    },
    "log_filename": "log.txt"
}