{
    "propagator": "crank_nicolson",
    "time_step": 0.2,
    "math_library": "PETsc",
    "checkpoint": 5000,
    "restart" : false,
    "do_propagate" : true,
    
    "basis": {
        "order": 8,
        "node_sequence": "parabolic",
        "parameter": 30,
        "num_nodes": 500,
        "x_min": 0.0,
        "x_max": 500.0,
        "lmax": 40,
        "mmax": 40,
        "ecs_r0": 0.9
    },
    "lasers": [
        {
            "num_cycles": 20.0,
            "cycles_up": 2.0,
            "cycles_down": 2.0,
            "cycles_delay": 0.0,
            "envelope": "sin2",
            "intensity": 1e14,
            "wavelength": 1000,
            "cep": 0,
            "ellipticity": 1,
            "polarization_vector": [
               	1.0,
                0.0,
                0.0
            ],
            "poynting_vector": [
                0.0,
                0.0,
                1.0
            ]
        }
    ],
    "initial_state": [
        {
            "n": 2,
            "l": 0,
            "m": 0
        }
    ],
    "potentials": [
        {
            "type": "yukawa",
            "Z": 10.15,
            "decay":  2.0
        }
    ],
    "observables": {
        "norm": {
            "compute_period": 1,
            "filename" : "norm.txt"
        },
        "populations": {
            "filename" : "populations.txt"
        },
        "pulse": {
            "filename" : "pulse.txt"
        },
        "potential": {
            "grid_points" : 5000,
            "filename" : "potential.txt"
        }    },
    "eigen_state": {
        "solver": "SLEPC",
        "nmax": 2,
        "lmax": 1, 
        "tol": 1e-10,
        "filename": "yukawa.h5"
    },
    "log_filename": "log.txt"
}

