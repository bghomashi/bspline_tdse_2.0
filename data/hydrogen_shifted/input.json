{
    "math_library": "PETsc",
    "propagator": {
        "type" : "crank_nicolson",
        "time_step" : 0.2,
        "checkpoint" : 5000,
        "restart" : false,
        "do_propagate" : true
    },
    "basis": {
        "order": 8,
        "node_sequence": "linear",
        "num_nodes": 101,
        "x_min": 0.0,
        "x_max": 50.0,
        "lmax": 20,
        "mmax": 0,
        "ecs_r0": 0.9
    },
    "lasers": [
        {
            "num_cycles": 5.0,
            "cycles_delay": 0.0,
            "envelope": "sin2",
            "intensity": 1e14,
            "wavelength": 200,
            "cep": 0,
            "polarization_vector": [
               	0.0,
                0.0,
                1.0
            ],
            "poynting_vector": [
                1.0,
                0.0,
                0.0
            ]
        }
    ],
    "initial_state": [
        {
            "n": 1,
            "l": 0,
            "m": 0,
            "phase": 0
        }
    ],
    "potentials": [
        {
            "type": "coulomb",
            "Z": 1,
            "location": [0, 0, 1]
        },
        {
            "type": "coulomb",
            "Z": 1,
            "location": [0, 0, -1]
        }
    ],
    "observables": {
        "norm": {
            "filename" : "norm.txt"
        },
        "dipole": {
            "filename" : "dipole.txt"
        },
        "populations": {
            "filename" : "populations.txt"
        },
        "pulse": {
            "filename" : "pulse.txt"
        },
        "potential": {
            "grid_points" : 1000,
            "filename" : "potential.txt"
        },
        "knots": {
            "filename" : "knots.txt"
        }
    },
    "eigen_state": {
        "solver": "SLEPC",
        "tol": 1e-10,
        "problem_type": "GHEP",
        "bound": {
            "filename": "H.h5",
            "nmax": 4
        },
        "continuum": {
            "filename": "H.h5",
            "energy_range" : [0 , 2]
        }
    },
    "log_filename": "log.txt"
}