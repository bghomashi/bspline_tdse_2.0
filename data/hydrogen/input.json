{
    "math_library": "PETsc",
    "propagator": {
        "type" : "crank_nicolson",
        "time_step" : 0.0001,
        "checkpoint" : 5000,
        "restart" : false,
        "do_propagate" : true
    },
    "basis": {
        "order": 8,
        "node_sequence": "linear",
        "num_nodes": 600,
        "x_min": 0.0,
        "x_max": 150.0,
        "lmax": 10,
        "mmax": 0,
        "ecs_r0": 1.0
    },
    "lasers": [
        {
            "num_cycles": 5.0,
            "cycles_delay": 0.0,
            "envelope": "sin2",
            "intensity": 1e14,
            "wavelength": 0.52,
            "cep": 0,
            "polarization_vector": [
               	0.0,
                0.0,
                1.0
            ],
            "poynting_vector": [
                1.0,
                0.0,
                0.0
            ]
        }
    ],
    "initial_state": [
        {
            "n": 1,
            "l": 0,
            "m": 0,
            "phase": 0
        }
    ],
    "potentials": [
        {
            "type": "coulomb",
            "Z": 1
        }
    ],
    "observables": {
        "norm": {
            "compute_period": 1,
            "filename" : "norm.txt"
        },
        "dipole_acc": {
            "filename" : "dip_acc.txt"
        },
        "populations": {
            "filename" : "populations.txt"
        },
        "ionization": {
            "filename" : "ionization.txt"
        },
        "pulse": {
            "filename" : "pulse.txt"
        },
        "potential": {
            "grid_points" : 1000,
            "filename" : "potential.txt"
        },
        "knots": {
            "filename" : "knots.txt"
        },
        "debug_wavefunction": {
            "compute_period" : 50,
            "grid_points" : 1000
        }
    },
    "eigen_state": {
        "solver": "SLEPC",
        "tol": 1e-10,
        "problem_type": "GHEP",
        "filename": "H.h5",
        "bound": {
            "nmax": 4
        },
        "continuum": {
            "nmax": 100,
            "lmax": 10
        }
    },
    "log_filename": "log.txt"
}